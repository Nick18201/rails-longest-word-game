<h1>New Game</h1>
<div class= "letters">
  <li>
  <% @letters.each do |letter| %>
    <ul> <%= letter %> </ul>
    <% end %>
  </li>
</div>
<form method= POST action="/score">
  <input type="text" name="word">
  <input type="submit" value="submit">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
</form>
